<?xml version="1.0" encoding="UTF-8"?>
<settings version="2">
    <section id="general">
        <category id="connection" label="Connection">
            <group id="ssh">
                <setting id="ssh_username" type="string" label="SSH Username" default="root">
                    <level>0</level>
                    <default>root</default>
                    <control type="edit" format="string"/>
                </setting>
                <setting id="network_prefix" type="string" label="Network Prefix" default="">
                    <level>1</level>
                    <default></default>
                    <control type="edit" format="string"/>
                    <help>Leave blank to auto-detect. Example: 192.168.1</help>
                </setting>
            </group>
        </category>
        <category id="advanced" label="Advanced">
            <group id="setup">
                <setting id="reset_keys" type="action" label="Reset SSH Keys">
                    <level>2</level>
                    <control type="button" format="action"/>
                    <data action="RunScript(script.skinsync, reset_keys)"/>
                    <help>Remove existing SSH keys and run setup again</help>
                </setting>
            </group>
        </category>
    </section>
</settings>
